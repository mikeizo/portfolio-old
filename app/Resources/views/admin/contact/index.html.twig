{% extends 'admin/base.html.twig' %}

{% block body %}

	<div class="row">
		<div class="col-sm-12">
			<h1 class="page-title">Contact List</h1>
		</div>
	</div>

	{% include 'admin/sections/alerts.html.twig' %}
	
	<div class="row">
		<div class="col-md-12">
			<div class="ibox">

				<div class="ibox-body">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>Name</th>
									<th>Email</th>
									<th>Phone</th>
									<th>Comments</th>
									<th>Date</th>
									<th class="text-center">Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for contact in contacts %}
									<tr>
										<td>{{ contact.name }}</td>
										<td>{{ contact.email }}</td>
										<td>{{ contact.phone }}</td>
										<td>{{ contact.comments }}</td>
										<td>{{ contact.timestamp|date('m/d/Y') }}</td>
										<td class="text-center">
											<form style="display: inline-block;" action="{{ path('admin_contact_delete', { 'id': contact.id }) }}" method="post" onsubmit="return confirmDelete()">
												{{ form_widget(deleteForms[contact.id]) }}
												<button type="submit" class="btn-delete" title="Delete"><i class="fas fa-trash-alt red"></i></button>
											</form>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						{% if not contacts %}
							<h3 class="text-center gray"> No records available</h3>
						{% endif %}
					</div>
				</div>

			</div>
		</div>
	</div>

{% endblock %}
