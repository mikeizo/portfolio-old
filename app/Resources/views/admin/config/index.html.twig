{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('assets/admin/css/vendors/summernote.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-sm-12">
			<h1 class="page-title">Configuration</h1>
		</div>
	</div>

	{% include 'admin/sections/alerts.html.twig' %}

	{{ form_start(form, {attr: { novalidate: 'novalidate' }} ) }}

	<div class="row">
		<div class="col-md-6">
			<div class="ibox">

				<div class="ibox-body">
					<div class="form-group">
						<label>Headline</label>
						{{ form_widget(form.headline) }}
					</div>

					<div class="form-group">
						<label>About</label>
						{{ form_widget(form.about) }}
					</div>

					<div class="form-group">
						<label>Quote</label>
						{{ form_widget(form.quote) }}
					</div>

					<div class="form-group text-right">
						<button class="btn btn-info" type="submit">Submit</button>
					</div>
				</div>
				
			</div>
		</div>

		<div class="col-md-6">
			<div class="ibox">

				<div class="ibox-body">
					<div class="form-group">
						<label>Email</label>
						{{ form_widget(form.email) }}
					</div>

					<div class="form-group">
						<label>Analytics</label>
						{{ form_widget(form.analytics) }}
					</div>
				</div>

			</div>
		</div>
	</div>

	{{ form_end(form) }}

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('assets/admin/js/vendors/summernote.js') }}"></script>
	<script>
		// Text Editor
		$('.summernote').summernote({ 
			height: 150, 
			toolbar: [
				['fontsize', ['style', 'fontsize']],
				['float', ['floatLeft', 'floatRight', 'floatNone']],
				['style', ['bold', 'italic', 'underline']],
				['para', ['ul', 'ol', 'paragraph']],
				['misc', ['link', 'codeview']],
			]
		});
	</script>
{% endblock %}