{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('assets/admin/css/vendors/bootstrap-datepicker3.min.css') }}" rel="stylesheet" />
	<link href="{{ asset('assets/admin/css/vendors/summernote.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-sm-6">
			<h1 class="page-title">About Edit</h1>
		</div>
		<div class="col-sm-6 text-right mt-2">
			<a href="{{ path('admin_about_index') }}"><i class="fas fa-angle-double-left"></i> Back to the list</a>
		</div>
	</div>

	{% include 'admin/sections/alerts.html.twig' %}
	
	<div class="row">
		<div class="col-sm-12">
			<div class="ibox">

				<div class="ibox-body">
				{{ form_start(form, {attr: { novalidate: 'novalidate' }} ) }}
					
					<label>Date Range</label>

					<div class="row">
						
						<div class="col-sm-12 mb-3">
							<div class="input-group">
								<div class="date">
									{{ form_widget(form.yearFrom) }}
									<div class="input-group-addon">
										<span class="glyphicon glyphicon-th"></span>
									</div>
								</div>
								<div class="input-group-append">
									<span class="input-group-text" id="basic-addon2"><i class="far fa-calendar-alt"></i></span>
								</div>

								<div class="date ml-sm-3">
									{{ form_widget(form.yearTo) }}
									<div class="input-group-addon">
										<span class="glyphicon glyphicon-th"></span>
									</div>
								</div>
								<div class="input-group-append">
									<span class="input-group-text" id="basic-addon2"><i class="far fa-calendar-alt"></i></span>
								</div>
							</div>
						</div>

						<div class="col-sm-12">
							<div class="form-group">
								<label>Description</label>
								{{ form_widget(form.description) }}
							</div>

							<div class="form-group text-right">
								<button class="btn btn-info" type="submit">Submit</button>
							</div>
						</div>
					</div>

				{{ form_end(form) }}
				</div>

			</div>
		</div>
	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('assets/admin/js/vendors/bootstrap-datepicker.min.js') }}"></script>
	<script src="{{ asset('assets/admin/js/vendors/summernote.js') }}"></script>

	<script>
		// Bootstrap Datepicker
		$('.date').datepicker({
			startView: 2,
			minViewMode: 2,
			maxViewMode: 2,
			format: 'yyyy-mm-dd',
			autoclose: true
		});

		// Text Editor
		$('.summernote').summernote({ 
			height: 150, 
			toolbar: [
				['fontsize', ['style', 'fontsize']],
				['float', ['floatLeft', 'floatRight', 'floatNone']],
				['style', ['bold', 'italic', 'underline']],
				['para', ['ul', 'ol', 'paragraph']],
				['misc', ['link', 'codeview']],
			]
		});
	</script>
{% endblock %}