<section id="skills">
	<div class="container">
		<div class="row">

			<div class="col-sm-12 text-center">
				<h2 class="headline blue">Skills</h2>
			</div>

			{% for skill in skills %}
				<div class="col-6 col-sm-6 col-lg-3">
					<svg viewbox="0 0 36 36" class="circular-chart">
						<path class="circle-bg"	
							d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831" />
						<path class="circle animated" data-animation="skills-animation" stroke-dasharray="{{ skill.percent }}, 100"
							d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831a 15.9155 15.9155 0 0 1 0 -31.831"/>
						<text x="18" y="20.35" class="percentage">{{ skill.percent }}%</text>
					</svg>
					<h4 class="text-center">{{ skill.skill }}</h4>
				</div>
			{% endfor %}

			<div class="logos col-sm-12 text-center mt-5">
				<i class="fab fa-html5 fa-5x"></i>
				<i class="fab fa-css3-alt fa-5x"></i>
				<i class="fab fa-php fa-5x"></i>
				<i class="fab fa-js fa-5x"></i>
				<i class="fab fa-wordpress-simple fa-5x"></i>
				<i class="fab fa-drupal fa-5x"></i>
				<i class="fab fa-gulp fa-5x"></i>
				<i class="fab fa-angular fa-5x"></i>
				<i class="fab fa-react fa-5x"></i>
				<i class="fab fa-npm fa-5x"></i>
				<i class="fab fa-git fa-5x"></i>
				<i class="fab fa-sass fa-5x"></i>
				<i class="fab fa-laravel fa-5x"></i>
				<img src="{{ asset('assets/img/codeigniter.png') }}" alt="codeigniter">
				<img src="{{ asset('assets/img/symfony.png') }}" alt="symfony">
				<i class="fab fa-aws fa-5x"></i>
				<i class="fab fa-windows fa-5x"></i>
				<i class="fab fa-apple fa-5x"></i>
				<i class="fab fa-pied-piper-alt fa-5x"></i>
			</div>

		</div><!-- .row end -->
	</div><!-- .container end -->
</section>